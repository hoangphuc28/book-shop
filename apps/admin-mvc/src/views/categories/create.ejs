<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs'); %>
  </head>

  <body class="bg-gray-100">
    <div class="flex">
      <%- include('../partials/sidebar.ejs'); %>
      <div class="w-full p-10 ml-64">
        <form method="post" action="/categories">
          <div class="flex justify-between items-center">
            <a href="/categories" class="text-blue-500 mb-4 inline-block"
              >&larr; Back to category listing</a
            >
            <button
              type="submit"
              class="px-4 py-2 bg-green-500 text-white rounded-lg mr-2 text-sm w-24"
            >
              Save
            </button>
          </div>
          <div class="flex mt-7">
            <div class="bg-white p-6 rounded-lg w-4/6">
              <h2 class="text-2xl font-bold mb-6">Add Category</h2>
              <div class="grid grid-cols-2 gap-6">
                <div>
                  <label class="block text-sm font-medium text-gray-700"
                    >Category name</label
                  >
                  <input
                    required
                    type="text"
                    name="name"
                    class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                    placeholder="Category name"
                  />
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700"
                    >Status</label
                  >
                  <select
                    required
                    name="isActive"
                    class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                  >
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                  </select>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </body>
  <script>
    function openInput() {
      document.getElementById('uploadImage').click();
    }
    function handleChange(event) {
      const file = event.target.files[0];
      const preview = document.getElementById('preview');
      if (file) {
        preview.src = URL.createObjectURL(file);
        preview.classList.remove('hidden');
      } else {
        preview.src = '';
        preview.classList.add('hidden');
      }
    }
  </script>
</html>
